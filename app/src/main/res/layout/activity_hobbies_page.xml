<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite_white"
    android:orientation="vertical"
    tools:context="dosomething.hi.ocs.com.dosomething.hobbies_page">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/toolbar_home"
                layout="@layout/custom_toolbar" />
            <RelativeLayout
                android:layout_below="@+id/toolbar_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/hobbies_textview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="8dp"
                        android:text="@string/hobbies_textview_title"
                        android:textColor="@color/text_grey"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/hobbies_textview_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="@string/hobbies_textview_subtitle"
                        android:textColor="@color/hint_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/hobbies_textview_arts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="@string/hobbies_textview_arts"
                        android:textColor="@color/red"
                        android:textSize="10sp" />

                    <com.dosomething.android.CommonClasses.ExpandableHeightGridView
                        android:id="@+id/hobbies_page_gridview_hobbies_arts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:horizontalSpacing="2dp"
                        android:isScrollContainer="false"
                        android:numColumns="5"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="8dp" />

                    <TextView
                        android:id="@+id/hobbies_textview_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:gravity="center_horizontal"
                        android:text="@string/hobbies_textview_food"
                        android:textColor="@color/red"
                        android:textSize="10sp" />

                    <com.dosomething.android.CommonClasses.ExpandableHeightGridView
                        android:id="@+id/hobbies_page_gridview_hobbies_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:horizontalSpacing="2dp"
                        android:isScrollContainer="false"
                        android:numColumns="4"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="8dp" />

                    <TextView
                        android:id="@+id/hobbies_textview_pets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:gravity="center_horizontal"
                        android:text="@string/hobbies_textview_pets"
                        android:textColor="@color/red"
                        android:textSize="10sp" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <com.dosomething.android.CommonClasses.ExpandableHeightGridView
                            android:id="@+id/hobbies_page_gridview_hobbies_pets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:horizontalSpacing="2dp"
                            android:isScrollContainer="false"
                            android:numColumns="4"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="8dp" />
                    </RelativeLayout>


                    <!--android:background="#ff0000"-->

                    <TextView
                        android:id="@+id/hobbies_textview_recreation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:gravity="center_horizontal"
                        android:text="@string/hobbies_textview_recreation"
                        android:textColor="@color/red"
                        android:textSize="10sp" />

                    <com.dosomething.android.CommonClasses.ExpandableHeightGridView
                        android:id="@+id/hobbies_page_gridview_hobbies_recreation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:horizontalSpacing="2dp"
                        android:isScrollContainer="false"
                        android:numColumns="5"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="8dp" />

                </LinearLayout>
                </ScrollView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:indeterminate="true"
                    android:indeterminateOnly="false" />
            </RelativeLayout>


            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/walkthrough_hobbies"
                    android:id="@+id/image_walkthrough_account_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/layout_walkthrough_profile"
                android:background="@drawable/walkthrough_hobbies"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/walkthrough_hobbies_ImageView"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/tuto_points" />
                <TextView
                    android:id="@+id/walkthrough_hobbies_TextView"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/walkthrough_border"
                    android:layout_width="210dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Select your interest and\n'Save' the Selection"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </RelativeLayout>

</LinearLayout>
