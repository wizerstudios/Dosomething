<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffffff"
    tools:context="com.dosomething.android.Fragments.AlertdialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearlayout_alertdialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_textview_availablenow"
            android:layout_width="238dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:background="@color/red"
            android:gravity="center"
            android:text="AVAILABLE NOW?"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="238dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_textview_accept_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="YES"
                android:background="@android:color/white"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/activity_textview_unaccept_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="NO"
                android:background="@android:color/darker_gray"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
