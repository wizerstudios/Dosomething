<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dosomething.android.SplashActivity$Splash3">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/section_label3"
        android:src="@drawable/splash3"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/font_splash3_main"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Interactions"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/font_splash3_subtitle"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do Something that broadens\nyour social network"
            android:textColor="@color/white"
            android:textSize="12sp"/>

    </LinearLayout>
</RelativeLayout>
