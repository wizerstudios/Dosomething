<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dosomething.android.Profile_image_one_fragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@drawable/dosomething_border"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="120dp"
                android:layout_height="120dp">

                <ProgressBar
                    android:layout_centerInParent="true"
                    android:id="@+id/fragment_profile_page_progressbar_hobbies"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/loading"/>
            </RelativeLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">




            <ImageView
                android:id="@+id/profile_image_one_page_imageview_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_noimg"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

</FrameLayout>>
            <ImageView
                android:id="@+id/profile_image_one_imageview_camera_inside"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="110dp"
                android:visibility="gone"
                android:src="@drawable/camera_icon"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/profile_image_one_imageview_camera_outside"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/camera_icon" />
    </LinearLayout>



</RelativeLayout>

