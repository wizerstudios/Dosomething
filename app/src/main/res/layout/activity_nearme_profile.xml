<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_something_doSomething_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_dosomething_imageview_nearme_textview_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20km"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/activity_dosomething_imageview_nearme_imageview_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chaton"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/fragment_profile_page_progressbar_hobbies"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />

        <FrameLayout
            android:id="@+id/activity_dosomething_layout_nearme_chong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activity_dosomething_imageview_nearme_chong"
                android:layout_width="98dp"
                android:layout_height="98dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/activity_dosomething_imageview_nearme_textview_now"
            android:layout_width="58dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/activity_dosomething_layout_nearme_chong"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:gravity="center"
            android:text="NOW"
            android:textColor="@color/red"
            android:textSize="8sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_dosomething_textview_nearme_name"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="center"
        android:text="Michelle Chong"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/activity_dosomething_nearme_textview_requestsend_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/activity_dosomething_nearme_ralativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="top|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_dosomething_nearme_textview_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Request Sent!"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/nearby_dosomething_image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/button_load" />

                    <ImageView
                        android:id="@+id/nearby_dosomething_image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/button_load" />

                    <ImageView
                        android:id="@+id/nearby_dosomething_image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/button_load" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:padding="3dp"
            android:id="@+id/activity_dosomething_nearme_textview_matched_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/red">

            <TextView
                android:id="@+id/activity_dosomething_nearme_textview_matched"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="Matched"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>