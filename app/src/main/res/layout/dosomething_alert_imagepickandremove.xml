<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_alertdialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dosomething_alert_pick_image_textview_gallery"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Pick from Gallery"
            android:background="@android:color/white"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/dosomething_alert_pick_image_textview_camera"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Take from Camera"
            android:background="@android:color/darker_gray"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/dosomething_alert_pick_image_textview_remove"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Remove Picture"
            android:background="@color/red"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>