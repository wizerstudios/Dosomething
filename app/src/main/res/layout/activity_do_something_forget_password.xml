<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ocs.hi.com.Create_account">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/lite_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/dosomething_forgetpassword_activity_textview_forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/lite_white"
        android:gravity="left|center"
        android:paddingLeft="32dp"
        android:text="Forget Your Password?"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/dosomething_forgetpassword_activity_textview_enteremail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/lite_white"
        android:layout_gravity="center"
        android:text="No Problem! Just fill in your Email and we'll send \nyou password to reset instructions!"
        android:paddingLeft="32dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/white" />

    <EditText
        android:id="@+id/dosomething_forgetpassword_activity_edittext_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/lite_white"
        android:hint="@string/login_edittext_email"
        android:inputType="textEmailAddress"
        android:paddingLeft="32dp"
        android:singleLine="true"
        android:textColor="@color/hint_color"
        android:textColorHint="@color/hint_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/dosomething_forgetpassword_activity_textview_resetpassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="Reset Password"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <Button
        android:id="@+id/dosomething_forgetpassword_activity_button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="@string/create_account_button_back"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lite_black"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dosomething_forgetpassword_activity_textview_signin"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@color/lite_black"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="Sign in"
                android:textColor="@color/white"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/dosomething_forgetpassword_activity_textview_createanaccount"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@color/lite_black"
                android:gravity="center"
                android:paddingRight="8dp"
                android:text="Create an Account"
                android:textColor="@color/white"
                android:textSize="11sp" />


        </RelativeLayout>


    </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:visibility="gone"
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:indeterminateOnly="false"
            android:indeterminate="true"
            />
    </RelativeLayout>
</RelativeLayout>